-- üéÆ DRXSCRIPTS | Pet GUI: Randomizer, Mutation ESP, Auto Age to 50

-- Services
local Players = game:GetService("Players")
local Workspace = game:GetService("Workspace")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer
local PlayerGui = player:WaitForChild("PlayerGui")

-- GUI Setup
local gui = Instance.new("ScreenGui", PlayerGui)
gui.Name = "DRXPetGUI"
gui.ResetOnSpawn = false

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 250, 0, 300)
frame.Position = UDim2.new(0.4, 0, 0.2, 0)
frame.BackgroundColor3 = Color3.fromRGB(217, 253, 242) -- Mint
frame.BorderColor3 = Color3.fromRGB(119, 136, 153)
frame.BorderSizePixel = 2
frame.Active = true
frame.Draggable = true

Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 12)
Instance.new("UIStroke", frame).Color = Color3.fromRGB(119, 136, 153)

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 35)
title.Text = "üïí Pet Aging Panel"
title.TextColor3 = Color3.fromRGB(0, 191, 255)
title.BackgroundTransparency = 1
title.Font = Enum.Font.GothamBold
title.TextSize = 18

local credit = Instance.new("TextLabel", frame)
credit.Size = UDim2.new(1, 0, 0, 20)
credit.Position = UDim2.new(0, 0, 1, -20)
credit.Text = "Made by DRXSCRIPTS"
credit.TextColor3 = Color3.fromRGB(51, 51, 51)
credit.BackgroundTransparency = 1
credit.Font = Enum.Font.Gotham
credit.TextSize = 13

-- Helper function to make buttons
local function createButton(text, yPos, color)
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(0.9, 0, 0, 40)
	btn.Position = UDim2.new(0.05, 0, 0, yPos)
	btn.BackgroundColor3 = color
	btn.Text = text
	btn.Font = Enum.Font.GothamMedium
	btn.TextSize = 16
	btn.TextColor3 = Color3.fromRGB(51, 51, 51)
	btn.AutoButtonColor = false

	Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
	local stroke = Instance.new("UIStroke", btn)
	stroke.Color = Color3.fromRGB(0, 0, 0)
	stroke.Thickness = 1.2

	btn.MouseEnter:Connect(function()
		TweenService:Create(btn, TweenInfo.new(0.2), {BackgroundColor3 = color:Lerp(Color3.new(1, 1, 1), 0.2)}):Play()
	end)
	btn.MouseLeave:Connect(function()
		TweenService:Create(btn, TweenInfo.new(0.2), {BackgroundColor3 = color}):Play()
	end)

	btn.Parent = frame
	return btn
end

-- üïí Load Pet Age 50 Script Button
local loadAgeBtn = createButton("üïí Load Pet Age 50", 60, Color3.fromRGB(119, 136, 153))

loadAgeBtn.MouseButton1Click:Connect(function()
	local petsFolder = workspace:FindFirstChild(player.Name .. "'s Pets") or workspace:FindFirstChild("Pets")
	if petsFolder then
		local updated = false
		for _, pet in ipairs(petsFolder:GetDescendants()) do
			if pet:IsA("Model") or pet:IsA("Part") then
				local age = pet:FindFirstChild("Age")
				if age and age:IsA("IntValue") then
					age.Value = 50
					updated = true
				end
			end
		end
		if updated then
			print("‚úÖ All pets aged to 50")
		else
			warn("‚ö† No ageable pets found.")
		end
	else
		warn("‚ùå Pets folder not found.")
	end
end)
